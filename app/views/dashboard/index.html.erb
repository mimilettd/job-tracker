<div class="container">
  <div class="container">
    <h4 class="display-6">Count of Jobs by Level of Interest:</h4>
    <canvas id="myChart" width="400" height="400"></canvas>
    <script>
    var ctx = document.getElementById("myChart").getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: <%= Job.level_of_interest_by_job.keys %>,
            datasets: [{
                label: '# of Jobs',
                data: <%= Job.level_of_interest_by_job.values %>,
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });
    </script>
  </div>
</div>

<h4>Top Three Companies by Level of Interest:</h4>
<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>Companies</th>
      <th>Average Level of Interest</th>
    </tr>
  </thead>
  <tbody>
    <% Job.level_of_interest_by_company.each do |subarray| %>
      <tr>
        <th scope="row"><%= Company.print_name(subarray[0]) %></th>
        <td><%= subarray[1].to_i %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h4>Count of Jobs by Location:</h4>
<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>City</th>
      <th>Count</th>
    </tr>
  </thead>
  <tbody>
    <% Job.count_by_city.each do |k, v| %>
      <tr>
        <th scope="row"><%= link_to k, jobs_path(:location => k) %></th>
        <td><%= v %></td>
      </tr>
    <% end %>
  </tbody>
</table>
