<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h3 class="display-4">Company Directory</h3>
    <p class="lead">You're interested in <%= Company.all.count %> companies.</p>
    <%= link_to "Add More", new_company_path, class: "btn btn-outline-primary" %>
  </div>
</div>

<div class="row">
  <% @companies.each do |company| %>
    <div class="col-sm-3">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= link_to company.name, company_path(company) %></h4>
          <p class="card-text"><%= company.jobs.count %> jobs added</p>
          <%= link_to "Edit", edit_company_path(company), class: "btn btn-primary btn-sm" %>
          <%= link_to "Delete", company_path(company), method: "delete", class: "btn btn-danger btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
