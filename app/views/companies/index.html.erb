<h3>All Companies</h3>

<ul>
  <% @companies.each do |company| %>
  <li class=company_<%= company.id %>>
    <%= link_to company.name, company_path(company) %><br />
    <%= link_to "Edit", edit_company_path(company), class: "btn btn-primary btn-sm" %>
    <%= link_to "Delete", company_path(company), method: "delete", class: "btn btn-danger btn-sm" %>
  </li>
  <% end %>
</ul>

<div class="list-group">
  <% @companies.each do |company| %>
    <div class="d-flex w-100 justify-content-between">
      <h3><%= link_to company.name, company_path(company) %></h3>
      <small><i>Created <%= distance_of_time_in_words(company.created_at, Time.now) %> ago</i></small>
    </div>
  <div class="d-flex w-100">
    <div class="col-.5">
      <%= link_to "Edit", edit_company_path(company), class: "btn btn-primary btn-sm" %>
    </div>
    <div class="col-1">
      <%= link_to "Delete", company_path(company), method: "delete", class: "btn btn-danger btn-sm" %>
    </div>
    <hr>
  </div>
  <% end %>
</div>
