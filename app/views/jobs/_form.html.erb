<%= form_for [@company, @job] do |f| %>
  <p><%= f.label :title %>
  <%= f.text_field :title %></p>

  <p><%= f.label :description %>
  <%= f.text_field :description %></p>

  <p><%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %></p>

  <p><%= f.label :city %>
  <%= f.text_field :city %></p>

  <p><%= f.label :category %>
  <%= f.collection_select :category_id, Category.all, :id, :title %>
  <%= link_to "Create a New Category", new_category_path %></p>

  <p><%= f.submit %></p>
<% end %>
